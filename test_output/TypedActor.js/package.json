{
  "name": "typed-actor.js",
  "version": "0.1.0",
  "description": "A distributed actor system library for TypeScript on Bun/Node.js, inspired by Akka. It provides type-safe messaging, supervision hierarchies, persistence via event sourcing, and horizontal scaling through cluster sharding, leveraging worker threads for parallelism.",
  "keywords": [
    "actor-system",
    "distributed-actors",
    "typescript",
    "bun",
    "nodejs",
    "akka",
    "event-sourcing",
    "cluster-sharding",
    "fault-tolerance",
    "type-safe",
    "parallelism"
  ],
  "author": "TypedActor.js Contributors",
  "license": "MIT",
  "homepage": "https://github.com/your-org/typed-actor.js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/typed-actor.js.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/typed-actor.js/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "rm -rf dist && tsc -p tsconfig.json && bun build src/index.ts --outdir dist --target node --format esm --entry-names [name].mjs",
    "test": "bun test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "@types/bun": "^1.0.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {}
}
