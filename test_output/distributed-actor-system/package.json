{
  "name": "distributed-actor-system",
  "version": "0.1.0",
  "description": "A TypeScript-based actor framework for Bun/Node.js, inspired by Akka. It provides type-safe message passing, supervision hierarchies, cluster sharding, and event-sourced persistence, leveraging worker threads for true parallelism.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun dist/index.js",
    "build": "bun tsc",
    "test": "bun test",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "docs": "typedoc --out docs src"
  },
  "keywords": [
    "actor-system",
    "akka",
    "typescript",
    "bun",
    "node",
    "distributed",
    "concurrency",
    "event-sourcing",
    "sharding"
  ],
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "uuid": "^9.0.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "@types/node": "^20.14.9",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
